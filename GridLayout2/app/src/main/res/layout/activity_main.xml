<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical"
    android:background="#37474F"
    tools:context="com.example.android.gridlayout2.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="8dp"
        android:columnCount="3">
        <TextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.5"
            android:textColor="#E8EAF6"

            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="TEAM A"
            android:textSize="20sp"></TextView>>
        <View android:layout_height="0dp"
            android:layout_width="1dp"
            android:layout_rowSpan="5"
            android:layout_gravity="fill_vertical"
            android:background="#43A047"/>
        <TextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.5"
            android:textColor="#E8EAF6"

            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:text="TEAM B"
            android:textSize="20sp"></TextView>>


        <TextView
            android:id="@+id/TeamAScore"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.5"
            android:textColor="#E8EAF6"

            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textSize="50sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="0"></TextView>>
        <TextView
            android:id="@+id/TeamBScore"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.5"
            android:textColor="#E8EAF6"
            android:fontFamily="sans-serif-smallcaps"

            android:gravity="center"
            android:layout_marginRight="16dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:text="0"></TextView>>

        <Button
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="+3 point"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:textSize="20sp"
            android:onClick="addThreeForA"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="-5.5dp"
            android:textColor="#004d40"
            android:background="#C8E6C9">
        </Button>
        <Button
            android:layout_height="0dp"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="+3 point"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#004d40"
            android:onClick="addThreeForB"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-5.5dp"
            android:background="#C8E6C9">
        </Button>

        <Button
            android:layout_height="0dp"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="+2 point"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#004d40"
            android:onClick="addTwoForA"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="-5.5dp"
            android:layout_marginTop="-5.5dp"
            android:background="#C8E6C9">
        </Button>
        <Button
            android:layout_height="0dp"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="+2 point"
            android:textStyle="normal"
            android:textSize="20sp"
            android:onClick="addTwoForB"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="-5.5dp"
            android:layout_marginTop="-5.5dp"
            android:textColor="#004d40"
            android:background="#C8E6C9">
        </Button>

        <Button
            android:layout_height="0dp"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="Free Throw"
            android:textStyle="normal"
            android:textSize="18sp"
            android:onClick="addOneForA"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="-5.5dp"
            android:textColor="#004d40"
            android:background="#C8E6C9">
        </Button>
        <Button
            android:layout_height="0dp"
            android:textAllCaps="true"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:text="Free Throw"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#004d40"
            android:onClick="addOneForB"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="-5.5dp"
            android:background="#C8E6C9">
        </Button>

    </GridLayout>>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            ></LinearLayout>>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="0.5"></TextView>>

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1.5"
                    android:gravity="center"

                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:textColor="#E8EAF6"
                    android:text="Team A win!"></TextView>>
                <Button
                    android:id="@+id/power"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1.5"
                    android:onClick="StartAndEnd"

                    android:layout_margin="8dp"
                    android:text="start"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:background="#C5CAE9">

                </Button>>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="0.5"
                    android:text=""></TextView>>
                </GridLayout>>
        </LinearLayout>>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            ></LinearLayout>>

    </LinearLayout>>
</LinearLayout>
